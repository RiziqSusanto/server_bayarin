<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Date</th>
                        <th>Nama</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < transaksi.length; i++){ %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= transaksi[i].transaksiDate.toLocaleString().split(',')[0] %></td>
                        <td><%= transaksi[i].memberId.firstName %> <%= transaksi[i].memberId.lastName %></td>
                        <td><%= transaksi[i].payments.status %></td>
                        <td>
                            <form action="/admin/transaksi/<%= transaksi[i].id %>?_method=DELETE" method="POST">
                                <a href="/admin/transaksi/<%= transaksi[i].id %>"
                                    class="btn btn-success btn-circle btn-sm button-update"><i
                                        class="fas fa-eye"></i></a>
                                <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                        class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>