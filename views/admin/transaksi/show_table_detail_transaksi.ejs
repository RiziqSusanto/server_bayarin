<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/transaksi" class="btn btn-warning">Kembali</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://bayarin-admin.herokuapp.com/<%= transaksi.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />

        <div class="row ml-2 mt-2">
          <% if(transaksi.payments.status == 'Proses') { %>
          <form
            action="/admin/transaksi/<%= transaksi.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button type="submit" class="btn btn-success btn-md">
              <i class="fas fa-check"> Confirm</i>
            </button>
          </form>

          <form
            action="/admin/transaksi/<%= transaksi.id %>/reject?_method=PUT"
            method="POST"
            class="ml-3"
          >
            <button type="submit" class="btn btn-danger btn-md">
              <i class="fas fa-times"> Reject</i>
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>NISN Murid</th>
                <th>Nama Murid</th>
                <th>Nama Pembayar</th>
                <th>No Telepon Pembayar</th>
                <th>Asal Bank</th>
              </tr>
            </thead>
            <tbody>
              <td><%= transaksi.nisnMurid %></td>
              <td><%= transaksi.namaMurid %></td>
              <td>
                <%= transaksi.memberId.firstName %> <%=
                transaksi.memberId.lastName %>
              </td>
              <td><%= transaksi.memberId.phoneNumber %></td>
              <td><%= transaksi.payments.bankFrom %></td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
