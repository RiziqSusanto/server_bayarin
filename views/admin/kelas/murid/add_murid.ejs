<div class="tab-pane fade" id="add-murid" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/kelas/add/murid" method="POST">
                <div class="form-group">
                    <label for="name">NISN</label>
                    <input type="number" class="form-control" name="nisn" placeholder="Enter nisn" required>
                </div>

                <div class="form-group">
                    <label for="name">Nama Lengkap</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter Nama Lengkap" required>
                </div>

                <div class="form-group">
                    <label for="name">Jenis Kelamin</label>
                    <select class="form-control" name="jenisKelamin">
                        <option>--- Jenis Kelamin ---</option>
                        <option value="Laki-Laki">Laki-Laki</option>
                        <option value="Perempuan">Perempuan</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="name">No Telepon</label>
                    <input type="number" class="form-control" name="noTelepon" placeholder="Enter No Telepon" required>
                </div>

                <div class="form-group">
                    <label for="name">Alamat</label>
                    <textarea name="alamat" class="form-control"></textarea>
                </div>

                <input type="hidden" value="<%= kelasId %>" name="kelasId">
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>